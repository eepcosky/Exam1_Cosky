#!/bin/bash
set -e
set -u
set -o pipefail

#Download file.
https://www.dropbox.com/s/1gxnyybqlazgvhm/BioinformaticsNov2.zip?dl=0
unzip BioinformaticsNov2.zip

#Obtain sam2counts.
wget https://raw.githubusercontent.com/vsbuffalo/sam2counts/master/sam2counts.py

#Obtain the sequences.
wget http://sourceforge.net/projects/rseqc/files/RSeQC-2.4.tar.gz 
tar -xvzf RSeQC-2.4.tar.gz 

#Change working directory.
cd RSeQC-2.4 

#Install these modules to manipulate the sequence data.
module load med bwa 
module load python/2.7.3 
module load med samtools
python setup.py install --user

#Begin by submitting a request for an interactive job to flux.
qsub -I -V -l procs=2 -l walltime=3:00:00 -A eeb416f15_flux -l qos=flux -qflux

#Move backwards in the directory network.
cd ..

#Index the IZNU-SOAPdenovo-Trans-assembly.fa file.
bwa index -a is IZNU-SOAPdenovo-Trans-assembly.fa > bwa_index.stdout 2> bwa_index.stderr

#Align the first and second reads to the reference genome.
bwa aln -t4 IZNU-SOAPdenovo-Trans-assembly.fa IZNU-read_1.fq > IZNU_R1.sai 2> IZNU_R1_bwa_aln.stderr
bwa aln -t4 IZNU-SOAPdenovo-Trans-assembly.fa IZNU-read_2.fq > IZNU_R2.sai 2> IZNU_R2_bwa_aln.stderr

#Create a sam alignment file.
bwa sampe IZNU-SOAPdenovo-Trans-assembly.fa IZNU_R1.sai IZNU_R2.sai IZNU-read_1.fq IZNU-read_2.fq > IZNU.sam 2> IZNU_sampe.stderr.sam

#In general, it is best to store files in BAM format, as it is compatible with all samtools subcommands, faster to process, and space efficient. So therefore, I will convert the SAM file to a BAM file.

samtools view -b IZNU_sampe.stderr.sam > IZNU_sampe.stderr.bam
